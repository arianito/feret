{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2015",
    "lib": ["dom", "ES2015"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "jsx": "react",
    "isolatedModules": true
  },
  "include": ["src"],
}
